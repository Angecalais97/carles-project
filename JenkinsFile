pipeline {
  agent any
  tools {
    maven 'maven'
  }
  stages {
    stage ('SCM') {
      steps {
        git branch: 'main', url: 'https://github.com/Angecalais97/carles-project/'
      }
    }
    stage ('Build, Compile, Test, Package') {
      steps {
        sh '''
        mvn --version
        mvn clean package -Dmaven.repo.local=/var/jenkins_home/maven_repository
        '''
      }
    }
  }
}
