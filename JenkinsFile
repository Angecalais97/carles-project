pipeline {
  agent any
  tools {
    maven 'maven'
  }
  environment {
    SONARQUBE_TOKEN = credentials('carles-token')
  }
  stages {
    stage ('scm') {
      steps {
        git branch: 'main', url: 'https://github.com/Angecalais97/carles-project'
      }
    }
    stage ('build,test,compile,package') {
      steps {
        sh ''' 
        mvn --version
        mvn clean package
        '''
      }
    }
    stage ('SonarQube Analysis') {
      steps {
        withSonarQubeEnv('let-do-it') { // SonarQube scanner name in Jenkins configuration
          sh '''
          mvn sonar:sonar \
            -Dsonar.projectKey=carles-project \
            -Dsonar.host.url=https://sonarqube.devopseasylearning.uk \
            -Dsonar.login=$SONARQUBE_TOKEN
          '''
        }
      }
    }
    stage ('build docker image') {
      steps {
        sh ''' 
        docker build -t s5carles/carles-project:v1
        docker run -d -P s5carles/carles-project:v1
        docker ps
        '''
      }
    }
  }
}

